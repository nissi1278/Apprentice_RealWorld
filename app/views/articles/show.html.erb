<div class="article-page">
    <div class="banner">
        <div class="container">
            <h1><%= @article.title %></h1>
            <div class="info">
                <span class="author">author: <%= @article.user.name %> </span>
            </div>
            <% if own_article?(@article) %>
                <div class="article-meta">
                    <%= button_to "Edit Article", edit_article_path(@article), method: :get, class: "btn btn-sm btn-outline-secondary ion-edit" %>
                    <%= button_to "Delete Article", article_path(@article), method: :delete, class: "btn btn-sm btn-outline-danger ion-trash-a" %>
                </div>
            <% end %>
        </div>
    </div>

    <div class="container page">
        <div class="row article-content">
            <div class="col-md-12">
                <p><%= @article.about %></p>
                <p><%= @article.description %></p>
            </div>
        </div>
    </div>
</div>