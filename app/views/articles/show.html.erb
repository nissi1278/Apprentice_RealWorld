<div class="article-page">
    <div class="banner">
        <div class="container">
            <h1><%= @article.title %></h1>
            <div class="article-meta">
                <%= button_to "Edit Article", edit_article_path(@article), method: :get, class: "btn btn-sm btn-outline-secondary ion-edit" %>
                <%= button_to "Delete Article", article_path(@article), method: :delete, class: "btn btn-sm btn-outline-danger ion-trash-a" %>
            </div>
        </div>
    </div>

    <div class="container page">
        <div class="row article-content">
            <div class="col-md-12">
                <p><%= @article.about %></p>
                <p><%= @article.description %></p>
                <%
=begin%>
                <ul class="tag-list">
                    <li class="tag-default tag-pill tag-outline">realworld</li>
                    <li class="tag-default tag-pill tag-outline">implementations</li>
                </ul>
                <%
=end%>
            </div>
        </div>

        <hr />